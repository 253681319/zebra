<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app 
   xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
   version="2.5"> 

  <display-name>Test JSON RPC Servlet</display-name>
  
  
  <filter>
    <filter-name>crossOrigin</filter-name>
    <filter-class>gravity.zebra.json.CrossDomainFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>crossOrigin</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>

  
  
<!-- Servlets -->
        <servlet>
                <servlet-name>JSON</servlet-name>
                <servlet-class>gravity.zebra.json.RPCServlet</servlet-class>
                <load-on-startup>1</load-on-startup>
                <init-param>
                        <param-name>server</param-name>
                        <param-value>gravity.zebra.json.DummyServer</param-value>
                </init-param>
        </servlet>

        <servlet-mapping>
                <servlet-name>JSON</servlet-name>
                <url-pattern>/json</url-pattern>
        </servlet-mapping>

</web-app>