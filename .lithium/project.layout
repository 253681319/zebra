

PROJECT {
	@desc = 'Zebra'
	@ver  = '1.2.0'
	
	ARTIFACT(RUBY) {
	    @libs = [ 'lib', "#{$lithium_home}/tools/tt/lib", "#{$lithium_home}/tools/polyglot/lib" ]
	}	

    SET("demo/demo/*.js") {
        CLASS(CompressJavaScript) {
	        @output_dir = "demo"
	        @options = [ "--nomunge"]
        }
    }
	
	COMMAND('minjs', FileSet) {
	    CLASS(CompressJavaScript) {
	        @output_dir = "web/uidemo"
	        @options = [ "--nomunge"]
	    }
	}

	ARTIFACT('lib/gravity/zebra.all.js', CombineJavaScript) 
}

