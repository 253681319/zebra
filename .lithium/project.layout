

PROJECT {
	@desc = 'Zebra'
	@ver  = '1.2.0'
	
	ARTIFACT(RUBY) {
	    @libs = [ 'lib', "#{$lithium_home}/tools/tt/lib", "#{$lithium_home}/tools/polyglot/lib" ]
	}	

    SET("demo/demo/*.js") {
        CLASS(CompressJavaScript) {
	        @output_dir = "demo"
	        @options = [ "--nomunge" ]
        }
    }

    ARTIFACT('lib/gravity/zebra/easyoop.min.js', CompressedJavaScript) {
        @source = "lib/gravity/zebra/easyoop.js"
        @options = [ "--nomunge" ]
    }

    ARTIFACT('lib/gravity/zebra/all.min.js', CompressedJavaScript) {
        @source = "lib/gravity/zebra/all.js"
        @options = [ "--nomunge" ]
        REQUIRE @source
    }

    ARTIFACT('lib/gravity/zebra/all.io.min.js', CompressedJavaScript) {
        @source = "lib/gravity/zebra/all.io.js"
        @options = [ "--nomunge" ]
        REQUIRE @source
    }

    ARTIFACT('lib/gravity/zebra/all.canvas.min.js', CompressedJavaScript) {
        @source = "lib/gravity/zebra/all.canvas.js"
        @options = [ "--nomunge" ]
        REQUIRE @source
    }

    ARTIFACT('web/ui/demo/demo.all.min.js', CompressedJavaScript) {
        @source = "web/ui/demo/demo.all.js"
        @options = [ "--nomunge" ]
        REQUIRE @source
    }

	SET('lib/gravity/zebra/*.js') {
	    CLASS(CombinedJavaScript)
	}

	SET('web/ui/demo/*.js') {
	    CLASS(CombinedJavaScript)
	}
}

